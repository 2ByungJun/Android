<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="10dp">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">

            <TextView
                android:id="@+id/result_operator_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp"
                android:autoSizeTextType="uniform"/>

        </ScrollView>

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:text="0"
            android:gravity="center_vertical|right"
            android:textSize="50sp"
            android:autoSizeTextType="uniform"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0092FF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:padding="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/all_clear_button"
                android:src="@drawable/ic_refresh_black_24dp"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/clear_entry_button"
                android:src="@drawable/ic_reply_black_24dp"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/back_space_button"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/wait1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="비트"
                android:gravity="center"
                android:tag="4"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/wait2"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="비트"
                android:gravity="center"
                android:tag="4"
                android:background="@drawable/btn_bg_ex"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_7"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="7"
                android:gravity="center"
                android:tag="7"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_8"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="8"
                android:gravity="center"
                android:tag="8"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_9"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="9"
                android:gravity="center"
                android:tag="9"
                android:background="@drawable/btn_bg_ex"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_5"
                android:src="@drawable/mod"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="%"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/wait3"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="비트"
                android:gravity="center"
                android:tag="4"
                android:background="@drawable/btn_bg_ex"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="4"
                android:gravity="center"
                android:tag="4"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="5"
                android:gravity="center"
                android:tag="5"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_6"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="6"
                android:gravity="center"
                android:tag="6"
                android:background="@drawable/btn_bg_ex"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_3"
                android:src="@drawable/mul"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="*"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_4"
                android:src="@drawable/div"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="1"
                android:gravity="center"
                android:tag="1"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_2"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="2"
                android:gravity="center"
                android:tag="2"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_3"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="3"
                android:gravity="center"
                android:tag="3"
                android:background="@drawable/btn_bg_ex"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_1"
                android:src="@drawable/add"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="+"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_2"
                android:src="@drawable/sub"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_6"
                android:src="@drawable/left"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="("/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="0"
                android:gravity="center"
                android:tag="0"
                android:background="@drawable/btn_bg_ex"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/number_button_spot"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="."
                android:gravity="center"
                android:tag="."
                android:background="@drawable/btn_bg_ex"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_7"
                android:src="@drawable/right"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag=")"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:id="@+id/operator_button_0"
                android:src="@drawable/same"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:background="@drawable/btn_bg_ex"
                android:tag="="/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>