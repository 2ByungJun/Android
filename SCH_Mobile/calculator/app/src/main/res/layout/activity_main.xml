<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <include layout="@layout/calculator_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_all_clear"
                android:text="AC"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="#FFF"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_bit_and"
                android:text="and"
                android:layout_marginLeft="2dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="#FFF"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_bit_or"
                android:text="OR"
                android:layout_marginLeft="2dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="#FFF"
                />

            <Button
                android:id="@+id/btn_bit_xor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:minHeight="40dp"
                android:text="XOR"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_bit_not"
                android:text="NOT"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="#FFF"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delete"
                android:text="C"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_small_bracket_left"
                android:text="("
                android:layout_marginLeft="2dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_small_bracket_right"
                android:text=")"
                android:layout_marginLeft="2dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />

            <Button
                android:id="@+id/btn_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="%"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back"
                android:text="BK"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="7"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_8"
                android:text="8"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="8"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_9"
                android:text="9"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="9"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_multiply"
                android:text="X"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="4"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_5"
                android:text="5"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="5"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_6"
                android:text="6"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="6"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_minus"
                android:text="-"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_2"
                android:text="2"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="2"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_3"
                android:text="3"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorFuncBtnBackground"
                android:tag="3"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="25sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_dot"
                    android:text="."
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorFuncBtnText"
                    android:background="@color/colorFuncBtnBackground"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_0"
                    android:text="0"
                    android:layout_marginLeft="2dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumBtnText"
                    android:background="@color/colorFuncBtnBackground"
                    android:tag="0"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_divide"
                    android:text="/"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorFuncBtnText"
                    android:background="@color/colorFuncBtnBackground"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_equal"
                    android:text="="
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="#666"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>